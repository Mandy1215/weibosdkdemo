<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/d33150d21ffd851bb5d0fe227815cf0b"
        android:id="@+id/information_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/myPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_logo"/>

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/name_Layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/myPicture">

            <TextView
                android:id="@+id/myName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="90dp"
                android:gravity="center"
                android:hint="昵称"
                android:textSize="30dp"/>

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@+id/myName"
                android:src="@drawable/t20170409220736"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/myInformation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name_Layout"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="这家伙很懒，什么都没留下"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/my_wb"
            android:textSize="30dp"
            android:text="我的微博"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:text=">  "
            android:layout_alignRight="@+id/my_wb"
            android:gravity="right"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/myMain"
            android:text="我的主页"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:text=">  "
            android:layout_alignRight="@+id/myMain"
            android:gravity="right"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#F3F3FA"
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/collect"
            android:text="我的主页"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:text=">  "
            android:layout_alignRight="@+id/collect"
            android:gravity="right"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
